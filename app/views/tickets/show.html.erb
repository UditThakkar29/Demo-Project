<div class="d-flex">
  <%= render "navbar" %>

  <div class="ms-5 mt-2" style="width: 80%;">
    <h2 ><%= @ticket.name %> </h2>

    <p style="strong"><%= @ticket.summary %></p>
    <p><strong>Assigned to:</strong> <%= User.find(@ticket.assigned_user_id).email %></p>

    <% if @ticket.priority== "High"%>
      <p class="text-danger"> <strong style="color: black;">Priority </strong>: High</p>
    <% elsif @ticket.priority== "Medium" %>
      <p class="text-warning-emphasis"><strong style="color: black;">Priority </strong>: Medium</p>
    <% else %>
    <p class="text-primary"><strong style="color: black;">Priority </strong>: Low</p>
    <% end %>

    <h3>Change Status</h3>
    <% if @ticket.to_do? %>
      <p>To-Do</p>
      <%= link_to "In Progress", start_project_board_sprint_ticket_path(project_id: params[:project_id],id: @ticket),method: :patch, class:"btn btn-primary mb-4" %>
    <% elsif @ticket.doing? %>
      <p>In Progress</p>
      <%= link_to "QA", test_project_board_sprint_ticket_path(project_id: params[:project_id],id: @ticket),method: :patch, class:"btn btn-primary mb-4" %>
    <% elsif @ticket.testing? %>
      <p>QA</p>
      <%= link_to "Back in progress", start_project_board_sprint_ticket_path(project_id: params[:project_id],id: @ticket),method: :patch, class:"btn btn-primary mb-4" %>
      <%= link_to "Done", done_project_board_sprint_ticket_path(project_id: params[:project_id],id: @ticket),method: :patch, class:"btn btn-primary mb-4" %>
    <% else %>
      <h5>All done for this ticket</h5>
    <% end %>
    <br>
    <% if @ticket.assigned_user_id %>
      <%= link_to "Changed Assigned User", edit_project_board_sprint_ticket_path(@ticket,project_slug: params[:project_slug],sprint_slug:params[:sprint_slug],board_slug:params[:board_slug]), class:"btn btn-outline-primary" %>
    <% else %>
      <%= link_to "Assign Ticket to any user", edit_project_board_sprint_ticket_path(@ticket,project_slug: params[:project_slug],sprint_slug:params[:sprint_slug],board_slug:params[:board_slug]), class:"btn btn-primary" %>
    <% end %>
  </div>

</div>




