
<div class="d-flex">
  <div>
    <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
      <div class="position-sticky">
        <div class="list-group list-group-flush mx-3 mt-2">
          <%= link_to "Current Project", project_path(@project), class: "list-group-item list-group-item-action py-2 ripple" %>
          <%= link_to "All projects", projects_path, class: "list-group-item list-group-item-action py-2 ripple" %>
          <%= link_to "Create Sprint", nil, class: "list-group-item list-group-item-action py-2 ripple" %>
          <a href="#" class="list-group-item list-group-item-action py-2 ripple">
            <span>#</span>
          </a>
        </div>
      </div>
    </nav>
  </div>

  <div style="width: 80%;">
    <div class="container">
      <div class="row", style="align-items: flex-end; border-bottom: 1px solid #D3D3D3;">
        <div class="col">
          <h2><%= @project.name %></h2>
        </div>
        <div class="col">
          <p><%= @project.description %></p>
        </div>
        <div class="col">
          <p><%= link_to 'Edit', edit_project_path(@project) %></p>
        </div>
        <div class="col">
          <p><%= link_to 'Delete', project_path(@project), method: :delete %></p>
        </div>
      </div>
    </div>
  </div>

</div>
